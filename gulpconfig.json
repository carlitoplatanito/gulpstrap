{
    "build_path" : "build/",
    "views": {
        "." : {
            "context": {
                "config": {
                    "app_name": "App Name",
                    "base_path": "/"
                }
            },
            "files": [
                "src/views/*.html"
            ]
        }
    },
    "scripts": {
        "application.min.js" : { 
            "output_path": "js",
            "files": [
                "src/js/modules/*.js", 
                "src/js/application.js"
            ]
        },
        "vendors.min.js" : {
            "output_path": "js",
            "files": [
                "bower_components/bootstrap/js/*.js"
            ]
        }
    },
    "stylesheets": {
        "screen.min.css" : {
            "output_path": "css",
            "files": [
                "src/less/screen.less"
            ]
        }
    },
    "images": {
        "img" : {
            "options": {"optimizationLevel": 5},
            "files": [
                "src/img/*"
            ]
        }
    }
}