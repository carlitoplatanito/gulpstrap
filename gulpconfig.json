{
    "build_path" : "build/",
    "views": {
        "." : {
            "context": {
                "config": {
                    "app_name": "App Name",
                    "base_path": "/"
                }
            },
            "files": [
                "src/views/*.html"
            ],
            "watch": [
                "src/views/**/*",
                "src/views/*"
            ]
        }
    },
    "scripts": {
        "application.min.js" : {
            "output_path": "js",
            "files": [
                "src/js/config.js",
                "src/js/**/*.js",
                "src/js/main.js"
            ],
            "watch": [
                "src/js/**/*",
                "src/js/*"
            ]
        },
        "vendors.min.js" : {
            "output_path": "js",
            "files": [
                "bower_components/bootstrap/js/*.js"
            ],
            "watch": false
        }
    },
    "stylesheets": {
        "screen.min.css" : {
            "output_path": "css",
            "files": [
                "src/less/screen.less"
            ],
            "watch": [
                "src/less/**/*",
                "src/less/*"
            ]
        }
    },
    "images": {
        "img" : {
            "options": {"optimizationLevel": 5},
            "files": [
                "src/img/*"
            ]
        }
    },
    "copy": {
        "fonts" : {
            "files": [
                "bower_components/bootstrap/fonts/*"
            ]
        }
    }
}
